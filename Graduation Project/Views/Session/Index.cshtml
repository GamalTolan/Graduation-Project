@model Graduation_Project.BLL.Pagination.PageResult<Graduation_Project.BLL.ViewModels.SessionVM.SessionVM>

@{
    ViewData["Title"] = "Sessions";
}

<h2>Sessions</h2>
@if (TempData["SuccessMessage2"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage2"]</div>
}

<p>
    <a asp-action="Create" class="btn btn-success">➕ Create New Session</a>
</p>

@if (TempData["Message"] != null)
{
    <div class="alert alert-warning">@TempData["Message"]</div>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

<div class="row mb-3">
    <div class="col-md-6">
        <form asp-action="Search" method="get" class="d-flex">
            <input type="text" name="courseName" class="form-control me-2" placeholder="Search by Course Name..." />
            <button type="submit" class="btn btn-primary">Search</button>
        </form>
    </div>
</div>


@if (Model.Items.Any())
{
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Course</th>
                <th>Start Date</th>
                <th>End Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var session in Model.Items)
            {
                <tr>
                    <td>@session.CourseName</td>
                    <td>@session.StartDate.ToShortDateString()</td>
                    <td>@session.EndDate.ToShortDateString()</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@session.Id" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="Details" asp-route-id="@session.Id" class="btn btn-info btn-sm">Details</a>
                        <a asp-action="Delete" asp-route-id="@session.Id" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info">No sessions found.</div>
}

<!-- Pagination -->
@if (Model.TotalItems > Model.PageSize)
{
    <nav>
        <ul class="pagination">
            @for (int i = 1; i <= Math.Ceiling((decimal)Model.TotalItems / Model.PageSize); i++)
            {
                <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                    <a class="page-link" asp-action="Index" asp-route-pageNumber="@i" asp-route-pageSize="@Model.PageSize">@i</a>
                </li>
            }
        </ul>
    </nav>
}

@if (ViewBag.IsSearch == true)
{
    <p>
        <a asp-action="Index" class="btn btn-secondary">Back</a>
    </p>
}
