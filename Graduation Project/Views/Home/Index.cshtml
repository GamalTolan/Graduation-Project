@model DashboardVM
@{
    ViewData["Title"] = "Dashboard";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

<div class="container mt-5">
    <h2 class="mb-4 text-center fw-bold">Dashboard</h2>

    <div class="row g-4">

        <div class="col-md-3">
            <div class="card shadow-lg border-0 rounded-4 text-center p-4 dashboard-card bg-primary text-white">
                <div class="mb-3">
                    <i class="fas fa-users fa-3x"></i>
                </div>
                <h4>Users</h4>
                <a asp-controller="User" asp-action="Index" class="btn btn-light mt-3 rounded-pill px-4">Go</a>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow-lg border-0 rounded-4 text-center p-4 dashboard-card bg-success text-white">
                <div class="mb-3">
                    <i class="fas fa-book fa-3x"></i>
                </div>
                <h4>Courses</h4>
                <a asp-controller="Course" asp-action="Index" class="btn btn-light mt-3 rounded-pill px-4">Go</a>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow-lg border-0 rounded-4 text-center p-4 dashboard-card bg-warning text-dark">
                <div class="mb-3">
                    <i class="fas fa-calendar-alt fa-3x"></i>
                </div>
                <h4>Sessions</h4>
                <a asp-controller="Session" asp-action="Index" class="btn btn-dark mt-3 rounded-pill px-4">Go</a>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow-lg border-0 rounded-4 text-center p-4 dashboard-card bg-danger text-white">
                <div class="mb-3">
                    <i class="fas fa-graduation-cap fa-3x"></i>
                </div>
                <h4>Grades</h4>
                <a asp-controller="Grade" asp-action="Index" class="btn btn-light mt-3 rounded-pill px-4">Go</a>
            </div>
        </div>

    </div>
</div>

<style>
    .dashboard-card {
        transition: transform 0.3s, box-shadow 0.3s;
        cursor: pointer;
    }

    .dashboard-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
    }

    .dashboard-card i {
        transition: transform 0.3s;
    }

    .dashboard-card:hover i {
        transform: scale(1.2);
    }
</style>
