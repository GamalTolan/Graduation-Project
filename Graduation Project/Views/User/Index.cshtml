@model Graduation_Project.BLL.Pagination.PageResult<Graduation_Project.BLL.ViewModels.UserVM.UserVM>

@{
    ViewData["Title"] = "Users";
}

<h2>@ViewData["Title"]</h2>
@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<!-- زرار Create -->
<p>
    <a asp-action="Create" class="btn btn-success">➕ Create New User</a>
</p>

<!-- رسائل النجاح أو الفشل -->
@if (TempData["Message"] != null)
{
    <div class="alert alert-warning">@TempData["Message"]</div>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

<!-- البحث -->
<div class="row mb-3">
    <div class="col-md-6">
        <form asp-action="SearchByName" method="get" class="d-flex">
            <input type="text" name="name" class="form-control me-2" placeholder="Search by name..." />
            <button type="submit" class="btn btn-primary">Search</button>
        </form>
    </div>

    <div class="col-md-6">
        <form asp-action="SearchByRole" method="get" class="d-flex">
            <select name="role" class="form-select me-2">
                <option value="">-- Select Role --</option>
                @foreach (var role in Enum.GetValues(typeof(Graduation_Project.DAl.Models.Role)))
                {
                    <option value="@role">@role</option>
                }
            </select>
            <button type="submit" class="btn btn-primary">Filter</button>
        </form>
    </div>
</div>

<!-- جدول عرض المستخدمين -->
@if (Model.Items.Any())
{
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Role</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model.Items)
            {
                <tr>
                    <td>@user.Name</td>
                    <td>@user.Email</td>
                    <td>@user.Role</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="Details" asp-route-id="@user.Id" class="btn btn-info btn-sm">Details</a>
                        <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info">No users found.</div>
}

<!-- Pagination -->
@if (Model.TotalItems > Model.PageSize)
{
    <nav>
        <ul class="pagination">
            @for (int i = 1; i <= Math.Ceiling((decimal)Model.TotalItems / Model.PageSize); i++)
            {
                <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                    <a class="page-link" asp-action="Index" asp-route-pageNumber="@i" asp-route-pageSize="@Model.PageSize">@i</a>
                </li>
            }
        </ul>
    </nav>
}
 