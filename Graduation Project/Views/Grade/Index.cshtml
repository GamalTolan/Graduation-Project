@model PageResult<GradeVM>

@{
    ViewData["Title"] = "Grades";
}

<h2>Grades</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<p>
    <a asp-action="Create" class="btn btn-primary">Add New Grade</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Trainee</th>
            <th>Course</th>
            <th>Session</th>
            <th>Value</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var grade in Model.Items)
        {
            <tr>
                <td>@grade.TraineeName</td>
                <td>@grade.CourseName</td>
                <td>@grade.SessionName</td>
                <td>@grade.Value</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@grade.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Details" asp-route-id="@grade.Id" class="btn btn-sm btn-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@grade.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Pagination -->
<nav aria-label="Page navigation">
    <ul class="pagination">
        @{
            int totalPages = (int)Math.Ceiling((double)Model.TotalItems / Model.PageSize);
        }

        <li class="page-item @(Model.PageNumber == 1 ? "disabled" : "")">
            <a class="page-link" asp-action="Index" asp-route-pageNumber="@(Model.PageNumber - 1)" asp-route-pageSize="@Model.PageSize">Previous</a>
        </li>

        @for (int i = 1; i <= totalPages; i++)
        {
            <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                <a class="page-link" asp-action="Index" asp-route-pageNumber="@i" asp-route-pageSize="@Model.PageSize">@i</a>
            </li>
        }

        <li class="page-item @(Model.PageNumber == totalPages ? "disabled" : "")">
            <a class="page-link" asp-action="Index" asp-route-pageNumber="@(Model.PageNumber + 1)" asp-route-pageSize="@Model.PageSize">Next</a>
        </li>
    </ul>
</nav>