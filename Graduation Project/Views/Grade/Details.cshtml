@model GradeDetailsVM

@{
    ViewData["Title"] = "Grade Details";
}

<h2>Grade Details</h2>

<div class="card shadow p-3">
    <dl class="row">
        <dt class="col-sm-3">Trainee</dt>
        <dd class="col-sm-9">@Model.TraineeName</dd>

        <dt class="col-sm-3">Course</dt>
        <dd class="col-sm-9">@Model.CourseName</dd>

        <dt class="col-sm-3">Session</dt>
        <dd class="col-sm-9">@Model.SessionName</dd>

        <dt class="col-sm-3">Session Start</dt>
        <dd class="col-sm-9">@Model.SessionStart.ToString("yyyy-MM-dd")</dd>

        <dt class="col-sm-3">Session End</dt>
        <dd class="col-sm-9">@Model.SessionEnd.ToString("yyyy-MM-dd")</dd>

        <dt class="col-sm-3">Grade</dt>
        <dd class="col-sm-9">@Model.Value</dd>
    </dl>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
